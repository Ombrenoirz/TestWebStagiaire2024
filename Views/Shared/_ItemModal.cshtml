@using System.Globalization
@model TestWebStagiaire2024.Models.Entities.Item
<div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="itemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="itemModalLabel">Ajouter/Modifier Article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="itemForm" asp-action="AddOrUpdateItem" method="post" novalidate>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("UserId")" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nom</label>
                        <input asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">Quantité</label>
                        <input type="number" min="1" value="1" asp-for="Quantity" class="form-control" required>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Prix (@CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol)</label>
                        <input type="number" min="0.01" value="0.01" asp-for="Price" class="form-control" step="0.01" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Sauvegarder</button>
                </div>
            </form>
        </div>
    </div>
</div>